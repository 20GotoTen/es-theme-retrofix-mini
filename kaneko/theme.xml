<theme>
	<formatVersion>7</formatVersion>
	<include>./../theme.xml</include>
<include>./../_inc/system/hidenames.xml</include>

  <view name="system">
   <image name="startSet" extra="static"></image>
 </view>

 <view name="basic, detailed">
  <textlist name="gamelist">
   <selectorColor>F80000</selectorColor>
   <selectedColor>ffffff</selectedColor>
       <extraTextColor>ffffff4d</extraTextColor>
      <extraTextSelectedColor>0000004d</extraTextSelectedColor>
 </textlist>
</view>


<view name="grid">
  <image name="gridtile.favorite">
    <color>F80000ff</color>
  </image>  
</view>

<customView name="Tiles" inherits="grid">
  <gridtile name="selected">
    <backgroundEdgeColor>F80000</backgroundEdgeColor>
  </gridtile>
</customView>

</theme>
