<!-- gba pecifics -->

<theme>
	<formatVersion>7</formatVersion>
	<include>./../theme.xml</include>
<include>./../_inc/system/hidenames.xml</include>


  <view name="system">
    <image name="startSet" extra="static"></image>
  </view>

  <view name="detailed">
   <textlist name="gamelist">
    <selectorColor>1F00CC</selectorColor>
    <selectedColor>ffffff</selectedColor>
        <extraTextColor>ffffff4d</extraTextColor>
      <extraTextSelectedColor>0000004d</extraTextSelectedColor>
 </textlist>
</view>



<customView name="Tiles" inherits="grid">
  <gridtile name="selected">
    <backgroundEdgeColor>1F00CC</backgroundEdgeColor>
  </gridtile>
</customView>

<view name="grid">
  <image name="gridtile.favorite">
    <color>1F00CCff</color>
  </image>  
</view>



<customView name="Boxes+Info" inherits="grid">
<imagegrid name="gamegrid">
    <size>0.44 0.72</size>
    <autoLayout if="{system.theme} == 'gba'">2 2</autoLayout>
  </imagegrid>
</customView>



</theme>