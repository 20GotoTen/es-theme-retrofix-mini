<theme>
	<formatVersion>7</formatVersion>
	<include>./../theme.xml</include>
<include>./../_inc/system/hidenames.xml</include>

	<view name="system">
		<image name="startSet" extra="static"></image>
	</view>

	<view name="detailed">
		<textlist name="gamelist">
			<selectorColor>3D2FA4</selectorColor>
			<selectedColor>000000</selectedColor>
		      <extraTextColor>ffffff4d</extraTextColor>
      <extraTextSelectedColor>0000004d</extraTextSelectedColor>
 </textlist>
	</view>

	<view name="grid">
		<image name="gridtile.favorite">
			<color>3D2FA4ff</color>
		</image>  
	</view>

	<customView name="Tiles" inherits="grid">
		<gridtile name="selected">
			<backgroundEdgeColor>3D2FA4</backgroundEdgeColor>
		</gridtile>
	</customView>

</theme>